<Window x:Class="WpfProyectoBD.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProyectoBD"
        mc:Ignorable="d"
        Title="Register" Icon="/img/logo.png" WindowStartupLocation="CenterScreen" Height="500" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/bgVapor.jpg" Opacity="0.8"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label x:Name="lblMensaje"
                       Content=""
                       Grid.Row="1"
                   FontSize="18"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image Height="164" Width="212">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="323" DecodePixelHeight="389" UriSource="img/logo.png"/>
                </Image.Source>
            </Image>
            <Label x:Name="lblLOGIN"
               Content="R E G I S T R O" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblNOM"
                   Content="n o m b r e : "/>
                <TextBox x:Name="txtNOM" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblEMAIL"
                   Content="e m a i l : "/>
                <TextBox x:Name="TxtEMAIL" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblCONTRA"
                   Content="c o n t r a s e ñ a : "/>
                <PasswordBox x:Name="pwdCONTRA" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button x:Name="btnCREARCUENTA"
                    Content=" c r e a r  c u e n t a " Click="btnCREARCUENTA_Click"/>
                <Button x:Name="btnLIMPIAR"
                    Content=" l i m p i a r " Click="btnLIMPIAR_Click"/>
                <Button x:Name="btnVOLVER"
                    Content=" v o l v e r " Click="btnVOLVER_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
