<Window x:Class="WpfProyectoBD.SolicitudesRecibidas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProyectoBD"
        mc:Ignorable="d"
        Title="Solicitudes Recibidas" Height="380" Width="400"
        Icon="/img/logo.png"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/bgVapor.jpg" Opacity="0.8"/>
        </Grid.Background>

        <StackPanel Margin="10">
            <Label Content="SOLICITUDES RECIBIDAS"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"/>

            <ListView x:Name="lvSolicitudes"
                      Height="350"
                      Margin="0,10,0,0"
                      FontFamily="MS Gothic">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nombre" Width="150" DisplayMemberBinding="{Binding Nombre}"/>
                        <GridViewColumn Header="Solicitud" Width="380" DisplayMemberBinding="{Binding Solicitud}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
